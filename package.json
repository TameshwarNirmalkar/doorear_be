{
  "name": "express-typescript-boilerplate",
  "version": "1.0.14",
  "description": "An Express boilerplate backend",
  "author": "Tameshwar Nirmalkar",
  "repository": "",
  "license": "MIT",
  "main": "index.ts",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc && tsup",
    "start:dev": "node --import=tsx --watch src/index.ts --inspect",
    "start:prod": "node dist/index.js",
    "check": "biome check --write",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "prepare": "husky install"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "7.3.4",
    "@google-cloud/logging-winston": "^6.0.1",
    "@google-cloud/secret-manager": "^6.1.0",
    "@openfga/sdk": "^0.9.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@vvo/tzdb": "^6.186.0",
    "cors": "2.8.5",
    "dotenv": "17.2.0",
    "express": "5.1.0",
    "express-rate-limit": "7.5.1",
    "express-session": "^1.18.2",
    "helmet": "8.1.0",
    "http-status-codes": "2.3.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "moment-timezone": "^0.6.0",
    "mysql2": "^3.14.1",
    "node-cache": "^5.1.2",
    "nodemailer": "^7.0.5",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "reflect-metadata": "^0.2.2",
    "stripe": "^18.3.0",
    "swagger-ui-express": "5.0.1",
    "typeorm": "^0.3.26",
    "uuid": "^11.1.0",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.1",
    "@types/body-parser": "^1.19.6",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.3",
    "@types/express-fileupload": "^1.5.1",
    "@types/express-session": "^1.18.2",
    "@types/moment-timezone": "^0.5.30",
    "@types/nodemailer": "^6.4.17",
    "@types/passport": "^1.0.17",
    "@types/pg": "^8.16.0",
    "@types/speakeasy": "^2.0.10",
    "@types/supertest": "6.0.3",
    "@types/swagger-ui-express": "4.1.8",
    "@vitest/coverage-v8": "3.2.4",
    "body-parser": "^2.2.0",
    "cookie-parser": "^1.4.7",
    "express-fileupload": "^1.5.2",
    "husky": "^8.0.0",
    "lru-cache": "^11.1.0",
    "nocache": "^4.0.0",
    "passport": "^0.7.0",
    "pino-pretty": "13.0.0",
    "speakeasy": "^2.0.0",
    "supertest": "7.1.3",
    "tsup": "8.5.0",
    "tsx": "4.20.3",
    "typescript": "5.8.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "x-frame-options": "^1.0.0"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "outDir": "dist",
    "format": [
      "esm",
      "cjs"
    ],
    "target": "es2020",
    "sourcemap": true,
    "clean": true,
    "dts": true,
    "splitting": true,
    "skipNodeModulesBundle": true
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.ts",
      "require": "./dist/index.ts"
    }
  }
}
