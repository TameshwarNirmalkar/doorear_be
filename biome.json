{
	"$schema": "https://biomejs.dev/schemas/2.1.1/schema.json",
	"vcs": { "enabled": false, "clientKind": "git", "useIgnoreFile": true },
	"files": { "ignoreUnknown": false, "includes": ["**", "!**/dist"] },
	"formatter": {
		"enabled": true,
		"lineWidth": 320,
		"bracketSpacing": true,
		"indentStyle": "space",
		"indentWidth": 2,
		"expand": "auto",
		"useEditorconfig": false
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"quoteStyle": "double",
			"trailingCommas": "es5",
			"semicolons": "always",
			"bracketSpacing": true,
			"bracketSameLine": false,
			"arrowParentheses": "always",
			"lineWidth": 320
		}
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"domains": {},
		"rules": {
			"a11y": "off",
			"recommended": true,
			"correctness": {
				"noUnusedImports": "error",
				"noUnusedVariables": "error"
			},
			"complexity": {
				"noCommaOperator": "error",
				"noEmptyTypeParameters": "error",
				"noUselessCatch": "error",
				"noUselessRename": "error",
				"useArrowFunction": {
					"level": "error",
					"options": {}
				}
			},
			"nursery": {
				"noMisusedPromises": "error",
				"noUnassignedVariables": "error",
				"noUnresolvedImports": "off"
			},
			"style": {
				"useNamingConvention": {
					"level": "off",
					"options": {
						"strictCase": true
					}
				}
			}
		}
	}
}
